<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_groapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groapa"
            android:layout_margin="10dp"
            android:onClick="btn_groapa_onClick"/>

        <Button
            android:id="@+id/btn_speedHump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed Hump"
            android:layout_margin="10dp"
            android:onClick="btn_speedHump_onClick"/>

        <Button
            android:id="@+id/btn_tren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cale ferata"
            android:layout_margin="10dp"
            android:onClick="btn_tren_onClick"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>